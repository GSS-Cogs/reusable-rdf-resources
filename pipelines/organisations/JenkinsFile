pipeline {
        agent {
            label 'master'
        }

        environment {
            THIS_DIR = "${pwd()}"
            OUT = "${THIS_DIR}/out"
        }

        stages {
            stage('Clean') {
                steps {
                    script {
                        sh "rm -rf ${OUT}"
                    }
                }
            }

            stage('csvlint') {
                agent {
                        docker {
                            image 'gsscogs/csvlint'
                            reuseNode true
                            alwaysPull true
                        }
                    }

                steps {
                    script {
                        sh "csvlint -s ${THIS_DIR}/schema.json"
                    }
                }
            }

            stage('csv2rdf') {
                agent {
                        docker {
                            image 'gsscogs/csv2rdf'
                            reuseNode true
                            alwaysPull true
                        }
                    }

                steps {
                    script {
                        sh "csv2rdf -t ${THIS_DIR}/organisations.csv -u ${THIS_DIR}/schema.json -m annotated > ${OUT}/output.ttl"
                    }
                }
            }
        }
}
